<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="110dp">    <TextView        android:id="@+id/tv_article_title"        android:layout_width="match_parent"        android:layout_height="45dp"        android:layout_marginTop="15dp"        android:ellipsize="end"        android:maxLines="2"        android:textColor="@color/color_405182"        android:textSize="14sp"        android:textStyle="bold"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent" />    <com.google.android.material.button.MaterialButton        android:id="@+id/bt_health_info_type"        style="?android:attr/borderlessButtonStyle"        android:layout_width="wrap_content"        android:layout_height="20dp"        android:layout_marginTop="5dp"        android:background="@color/color_61FF4500"        android:gravity="center"        android:minWidth="0dp"        android:padding="4dp"        android:textColor="@color/color_ffffff"        android:textSize="12sp"        app:cornerRadius="6dp"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@id/tv_article_title" />    <TextView        android:id="@+id/tv_home_info_time"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginStart="16dp"        android:layout_marginTop="6dp"        android:textColor="@color/color_A6A6C0"        android:textSize="12sp"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@id/bt_health_info_type" />    <TextView        android:id="@+id/tv_article_author"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="6dp"        android:textColor="@color/color_A6A6C0"        android:textSize="12sp"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintEnd_toStartOf="@id/iv_home_info_like"        app:layout_constraintTop_toBottomOf="@id/bt_health_info_type" />    <ImageView        android:id="@+id/iv_home_info_like"        android:layout_width="15dp"        android:layout_height="15dp"        app:layout_constraintBottom_toBottomOf="@id/tv_home_info_time"        app:layout_constraintEnd_toEndOf="@id/tv_article_title" />    <View        android:layout_width="match_parent"        android:layout_height="1dp"        android:background="@color/color_F1F3F9"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent" /></androidx.constraintlayout.widget.ConstraintLayout>