<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="match_parent">    <TextView        android:id="@+id/login_iv_phone"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginStart="25dp"        android:layout_marginTop="43dp"        android:text="用户名："        android:textSize="18sp"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent" />    <EditText        android:id="@+id/login_et_user_name"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginStart="25dp"        android:layout_marginTop="19dp"        android:layout_marginEnd="25dp"        android:hint="请输入用户名"        android:textColor="@color/color_405182"        android:textSize="18sp"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@id/login_iv_phone" />    <TextView        android:id="@+id/login_tv_password"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginStart="25dp"        android:layout_marginTop="19dp"        android:text="密码："        android:textSize="18sp"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@id/login_et_user_name" />    <EditText        android:id="@+id/login_et_password"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginStart="25dp"        android:layout_marginTop="19dp"        android:layout_marginEnd="25dp"        android:hint="请输入密码"        android:textSize="18sp"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@id/login_tv_password" />    <TextView        android:id="@+id/login_tv_password_tips"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginStart="25dp"        android:text="密码必须大于6位数"        app:layout_constraintTop_toBottomOf="@id/login_et_password" />    <com.google.android.material.button.MaterialButton        android:id="@+id/login_bt_login"        android:layout_width="match_parent"        android:layout_height="55dp"        android:layout_marginStart="25dp"        android:layout_marginTop="50dp"        android:layout_marginEnd="25dp"        android:background="@color/color_FF0000"        android:shadowRadius="2.0"        android:text="登录"        android:textColor="@color/color_ffffff"        android:textSize="18dp"        app:cornerRadius="10dp"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/login_tv_password_tips"        app:layout_goneMarginTop="50dp" />    <TextView        android:id="@+id/login_tv_to_register"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="15dp"        android:text="立即去注册"        android:textSize="16dp"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@id/login_bt_login" /></androidx.constraintlayout.widget.ConstraintLayout>