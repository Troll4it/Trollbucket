<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="match_parent">    <com.google.android.material.button.MaterialButton        android:id="@+id/dialog_show"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_marginStart="20dp"        android:layout_marginEnd="20dp"        android:text="弹出"        app:layout_constraintEnd_toStartOf="@id/dialog_dismiss"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent" />    <com.google.android.material.button.MaterialButton        android:id="@+id/dialog_dismiss"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_marginEnd="20dp"        android:text="隐藏"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toEndOf="@id/dialog_show"        app:layout_constraintTop_toTopOf="parent" /></androidx.constraintlayout.widget.ConstraintLayout>