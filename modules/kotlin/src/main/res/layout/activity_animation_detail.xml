<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="match_parent">    <com.google.android.material.button.MaterialButton        android:id="@+id/animation_button_start"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_marginStart="20dp"        android:layout_marginEnd="20dp"        android:text="开始"        android:textAllCaps="false"        app:layout_constraintEnd_toStartOf="@id/animation_button_stop"        app:layout_constraintHorizontal_chainStyle="packed"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent" />    <com.google.android.material.button.MaterialButton        android:id="@+id/animation_button_stop"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_marginStart="20dp"        android:layout_marginEnd="20dp"        android:text="结束"        android:textAllCaps="false"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toEndOf="@id/animation_button_start"        app:layout_constraintTop_toTopOf="parent" />    <troll.kotlin.animation.ticker.TickerView        android:id="@+id/ticker"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:textColor="#8b2c20"        app:layout_constraintBottom_toTopOf="@id/ticker2"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent"        app:layout_constraintVertical_chainStyle="packed" />    <troll.kotlin.animation.ticker.TickerView        android:id="@+id/ticker2"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="50dp"        android:textColor="#8b2c20"        app:layout_constraintBottom_toTopOf="@id/ticker3"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@id/ticker" />    <troll.kotlin.animation.ticker.TickerView        android:id="@+id/ticker3"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="50dp"        android:textColor="#8b2c20"        app:layout_constraintBottom_toTopOf="@id/ticker4"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@id/ticker2" />    <troll.kotlin.animation.ticker.TickerView        android:id="@+id/ticker4"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="50dp"        android:textColor="#8b2c20"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@id/ticker3" />    <View        android:id="@+id/animation_view"        android:layout_width="200dp"        android:layout_height="200dp"        android:background="#ff2340"        android:visibility="gone"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent" />    <troll.kotlin.animation.ObjectAnimatorView        android:id="@+id/animation_object"        android:layout_width="300dp"        android:layout_height="300dp"        android:visibility="gone"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent" /></androidx.constraintlayout.widget.ConstraintLayout>