<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:orientation="vertical">    <ImageView        android:id="@+id/notification_iv"        android:layout_width="match_parent"        android:layout_height="200dp"        android:background="@color/black" />    <TextView        android:id="@+id/notification_tv"        android:layout_width="wrap_content"        android:layout_height="match_parent"        android:text="自定义通知布局 大图" />    <Button        android:id="@+id/notification_close"        android:layout_width="wrap_content"        android:layout_height="wrap_content" /></LinearLayout>