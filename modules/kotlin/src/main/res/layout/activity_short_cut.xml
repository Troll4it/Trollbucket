<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="match_parent">    <com.google.android.material.button.MaterialButton        android:id="@+id/short_mb_add"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_marginEnd="20dp"        android:text="添加"        app:layout_constraintEnd_toStartOf="@id/short_mb_update"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent" />    <com.google.android.material.button.MaterialButton        android:id="@+id/short_mb_update"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_marginEnd="20dp"        android:text="更新"        app:layout_constraintEnd_toStartOf="@id/short_mb_query"        app:layout_constraintStart_toEndOf="@id/short_mb_add"        app:layout_constraintTop_toTopOf="parent" />    <com.google.android.material.button.MaterialButton        android:id="@+id/short_mb_query"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:text="查询"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toEndOf="@id/short_mb_update"        app:layout_constraintTop_toTopOf="parent" /></androidx.constraintlayout.widget.ConstraintLayout>