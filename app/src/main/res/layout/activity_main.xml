<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainBaseActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="协程"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_retrofit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retrofit"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_one" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_bus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bus"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/main_retrofit" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_wan_android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="玩Android"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/main_bus" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_dag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dag"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/main_wan_android" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_soft_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="软键盘"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/main_wan_android" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_compose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Compose"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/main_soft_input" />
</androidx.constraintlayout.widget.ConstraintLayout>